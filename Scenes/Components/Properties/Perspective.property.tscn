uniform sampler2D gradient;


void fragment(){
	// SubViewport texture
	vec4 input_color = texture(TEXTURE, UV);
	
	//Brightness adjustment
	input_color.rgb = mix(vec3(0.0), input_color.rgb, brightness);
	
	//Contrast adjustment	
